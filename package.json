{
  "name": "lammps",
  "displayName": "Lammps Syntax Highlighting",
  "description": "Keyword/Syntax highlighting extension for Molecular Dynamics Software LAMMPS",
  "version": "1.2.3",
  "publisher": "ThFriedrich",
  "repository": {
    "url": "https://github.com/ThFriedrich/lammps_vscode"
  },
  "bugs": "https://github.com/ThFriedrich/lammps_vscode/issues",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lmps"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lmps",
        "aliases": [
          "Lammps",
          "lmps"
        ],
        "extensions": [
          ".lmp",
          ".lmps",
          ".lammps"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "lmps",
        "path": "./snippets/lmps.json"
      }
    ],
    "grammars": [
      {
        "language": "lmps",
        "scopeName": "source.lmps",
        "path": "./syntaxes/lmps.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "extension.show_docs",
        "title": "Open Lammps Documentation"
      }
    ],
    "configuration": {
      "title": "Lammps Syntax Highlighting",
      "properties": {
        "lammps.Hover.Detail": {
          "type": "string",
          "description": "Control the length of the displayed description in the hover popup.",
          "default": "Short",
          "enum": ["Short", "Complete"],
          "enumDescriptions": [
            "Hover shows only a short description of the command",
            "Hover shows the full description of the command"
          ]
        },
        "lammps.Hover.Enabled": {
          "type": "boolean",
          "default": "true",
          "description": "Display command information in a popup when hovering the mouse over a recognised command or syntax."
        },
        "lammps.Hover.Examples": {
          "type": "boolean",
          "default": "true",
          "description": "Display command examples in the hover popup."
        },
        "lammps.Hover.Restrictions": {
          "type": "boolean",
          "default": "false",
          "description": "Display command restrictions in the hover popup."
        },
        "lammps.AutoComplete.Enabled": {
          "type": "boolean",
          "default": "true",
          "description": "Enable/Disable completion suggestions"
        },
        "lammps.AutoComplete.Hint": {
          "type": "boolean",
          "default": "false",
          "markdownDescription": "Display a little syntax reminder inline with the selected command in the autocompletion box. This may be useful if you prefer a minimalistic autocompletion popup. \n [See an example...](https://user-images.githubusercontent.com/45487966/79160252-c386fb80-7dd9-11ea-8c26-8daac5acae60.png)"
        },
        "lammps.AutoComplete.CompletionString": {
          "type": "string",
          "default": "Command",
          "description": "Control the autocompletion behaviour",
          "enum": ["Command", "Syntax"],
          "enumDescriptions": [
            "Auto Complete inserts only the command words",
            "Auto Complete inserts the command words and placeholders, corresponding to the syntax of the command."
          ]
        }
      }
    }},
    "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "lint": "eslint src --ext ts",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile && npm run lint",
      "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
      "@types/glob": "^7.1.1",
      "@types/mocha": "^7.0.1",
      "@types/node": "^12.11.7",
      "@types/vscode": "^1.43.0",
      "eslint": "^6.8.0",
      "@typescript-eslint/parser": "^2.18.0",
      "@typescript-eslint/eslint-plugin": "^2.18.0",
      "glob": "^7.1.6",
      "mocha": "^7.0.1",
      "typescript": "^3.7.5",
      "vscode-test": "^1.3.0"
    }
  }